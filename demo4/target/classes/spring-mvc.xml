    <mvc:interceptors>
        <mvc:interceptor>
        <mvc:mapping path="/**"/>
        <mvc:exclude-mapping path="/login"/>
        <mvc:exclude-mapping path="/img"/>
        <mvc:exclude-mapping path="/bqb"/>
        <mvc:exclude-mapping path="/css"/>
        <mvc:exclude-mapping path="/js"/>
        <mvc:exclude-mapping path="/scss"/>
        <mvc:exclude-mapping path="/vendor"/>
        <bean class="com.ctguqmx.web.interceptor.LoginInterceptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>